{
  "name": "@form8ion/add-package-to-monorepo",
  "description": "opinionated scaffolder for adding a JavaScript package to an existing monorepo",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "engines": {
    "node": "^16.13 || >=18"
  },
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org)",
  "repository": "form8ion/add-package-to-monorepo",
  "bugs": "https://github.com/form8ion/add-package-to-monorepo/issues",
  "homepage": "https://npm.im/@form8ion/add-package-to-monorepo",
  "runkitExampleFilename": "./example.js",
  "exports": {
    "require": "./lib/index.js",
    "import": "./lib/index.mjs"
  },
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "sideEffects": false,
  "scripts": {
    "test": "npm-run-all --print-label build --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "run-s lint:js -- --fix",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "pregenerate:md": "run-s build",
    "lint:sensitive": "ban",
    "pretest:integration:base": "run-s build",
    "lint:gherkin": "gherkin-lint",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "NODE_OPTIONS=\"--loader=testdouble --enable-source-maps\" cucumber-js test/integration",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha 'src/**/*-test.js'",
    "lint:peer": "npm ls >/dev/null",
    "prepare": "husky install",
    "lint:engines": "ls-engines"
  },
  "files": [
    "example.js",
    "lib/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@form8ion/core": "^2.0.0",
    "@form8ion/execa-wrapper": "^1.0.0",
    "@form8ion/javascript": "^10.0.0",
    "@form8ion/javascript-core": "^8.0.0",
    "@form8ion/overridable-prompts": "^1.1.0",
    "@form8ion/readme": "2.0.1",
    "@form8ion/results-reporter": "^1.1.0",
    "@travi/cli-messages": "^1.0.4",
    "deepmerge": "^4.2.2",
    "hosted-git-info": "^6.0.0",
    "make-dir": "^3.1.0"
  },
  "devDependencies": {
    "@babel/register": "7.21.0",
    "@cucumber/cucumber": "9.0.1",
    "@form8ion/babel-preset": "1.6.99",
    "@form8ion/commitlint-config": "1.0.46",
    "@form8ion/eslint-config": "5.0.27",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/eslint-config-mocha": "2.0.3",
    "@form8ion/remark-lint-preset": "5.0.0",
    "@travi/any": "2.1.8",
    "babel-plugin-istanbul": "6.1.1",
    "ban-sensitive-files": "1.9.18",
    "c8": "7.13.0",
    "chai": "4.3.7",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "debug": "4.3.4",
    "gherkin-lint": "4.2.2",
    "husky": "8.0.3",
    "lockfile-lint": "4.10.1",
    "ls-engines": "0.9.0",
    "mdast-zone": "5.1.1",
    "mocha": "10.2.0",
    "mock-fs": "5.2.0",
    "nock": "13.3.0",
    "npm-run-all": "4.1.5",
    "remark": "14.0.2",
    "remark-cli": "11.0.0",
    "remark-toc": "8.0.1",
    "remark-usage": "10.0.1",
    "rimraf": "4.4.1",
    "rollup": "3.20.2",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "15.0.3",
    "testdouble": "3.17.1",
    "unist-util-find": "1.0.2",
    "yargs": "17.7.1"
  }
}
